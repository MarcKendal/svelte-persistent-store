{
  "files": [
    "src/local.ts",
    "src/session.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "target": "ES5",
    "declaration": true,
    "declarationDir": ".",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    // rollup takes care of these
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "svelte/*": [
        "*"
      ]
    }
  }
}
